@article{
author = {Stanwyck, Christopher},
title = {Comfort in Head-Mounted Displays},
abstract = {As virtual and augmented reality environments pick up steam head-mounted displays are proliferating as the primary visual device.  This technology creates the illusion of a truely 3D environment, but at the potential cost of user discomfort.  This paper explores the causes and potential mitigation for user discomfort.},
}